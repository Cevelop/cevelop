//! Initialize in for loop fix
//@.config
setPreferencesEval=(GUIDELINE_SETTING_ID|MISRA_GUIDELINE_ID)
//@main.h
void function()  {
	int j;
	for(j= 0; j<0; j++) {
	}
}
//=
void function()  {
	for (int j = 0; j < 0; j++) {
	}
}

